{
  "name": "@katas/greeting-service",
  "version": "1.0.0",
  "description": "A simple greeting service to showcase acceptance testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:no-db": "SKIP_DB_INIT=true ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose stop postgres",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres",
    "db:logs": "docker-compose logs postgres"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.5.1",
    "@types/express": "^4.17.17",
    "@types/jest": "*",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "jest": "*",
    "pg": "^8.16.3",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "ts-jest": "*",
    "ts-node": "^10.9.1",
    "typescript": "*"
  }
}
